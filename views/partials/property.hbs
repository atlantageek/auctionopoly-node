            <circle class="player1" cx="10" cy="30" r="5" fill="lightgreen"/>
            <circle class="player2" cx="20" cy="30" r="5" fill="lightblue"/>
            <circle class="player3" cx="30" cy="30" r="5" fill="pink"/>
